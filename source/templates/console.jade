									button(type="button",data-toggle="dropdown",aria-haspopup="true",aria-expanded="false").btn.btn-primary.dropdown-toggle
										span.caret
										span.sr-only.
											Toggle Dropdown
									ul.dropdown-menu
										each region, index in regions
											li
