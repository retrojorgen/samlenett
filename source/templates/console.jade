extend default

block content

	.container-fluid
		.main-content
			h2.
				#{console.name}
	.container-fluid
		.main-content.container
			.table-information.
				Viser  #{games.length} spill
			table.collection-table.table.table-striped.table-condensed
				tr
					th.
						Screen-shot
					th.
						Title
					th.
						FÃ¸rst utgitt
					th.
